@page
@model OdeToFood.Pages.Restaurants.IndexModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input asp-for="SearchTerm" name="searchTerm" type="search" class="form-control" />
            <span class="input-group-append">
                <button class="btn input-group-text">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>
<table class="table">

    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-lg nav-link" 
                   asp-page="./Detail" 
                   asp-route-restaurantId="@restaurant.Id">
                    Details
                </a>
            </td>
        </tr>
    }
</table>

<div>@Model.Message</div>
